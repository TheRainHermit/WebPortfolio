---
interface Props {
	title: string;
	description: string;
	icon: string;
	href: string;
	gradient: string;
}

const { title, description, icon, href, gradient } = Astro.props;
---

<div class="section-preview">
	<a href={href} class="preview-link">
		<div class="preview-content">
			<div class="preview-icon" style={`background: ${gradient}`}>
				{icon}
			</div>
			<div class="preview-text">
				<h3 class="preview-title">{title}</h3>
				<p class="preview-description">{description}</p>
			</div>
		</div>
		<div class="preview-arrow">â†’</div>
	</a>
</div>

<style>
	.section-preview {
		background: var(--glass-bg);
		backdrop-filter: blur(20px);
		border-radius: 16px;
		padding: calc(var(--spacing-unit) * 3);
		transition: all 0.3s ease;
		border: 1px solid var(--glass-border);
		height: 100%;
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
	}

	.section-preview:hover {
		transform: translateY(-4px);
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
		border-color: rgba(148, 163, 184, 0.4);
	}

	.preview-link {
		display: flex;
		align-items: center;
		gap: calc(var(--spacing-unit) * 2);
		height: 100%;
	}

	.preview-content {
		display: flex;
		align-items: center;
		gap: calc(var(--spacing-unit) * 2);
		flex: 1;
	}

	.preview-icon {
		width: 48px;
		height: 48px;
		border-radius: 12px;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 1.5rem;
		color: white;
		flex-shrink: 0;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
	}

	.preview-title {
		font-size: 1.25rem;
		font-weight: 600;
		color: #f1f5f9;
		margin-bottom: calc(var(--spacing-unit) / 2);
	}

	.preview-description {
		color: #cbd5e1;
		line-height: 1.5;
	}

	.preview-arrow {
		font-size: 1.5rem;
		color: var(--color-neutral-500);
		transition: all 0.3s ease;
	}

	.preview-link:hover .preview-arrow {
		color: var(--color-accent);
		transform: translateX(4px);
		text-shadow: 0 0 10px rgba(148, 163, 184, 0.5);
	}

	@media (max-width: 768px) {
		.section-preview {
			padding: calc(var(--spacing-unit) * 2);
		}

		.preview-content {
			flex-direction: column;
			text-align: center;
		}

		.preview-arrow {
			display: none;
		}
	}
</style>